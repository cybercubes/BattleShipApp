@page
@model WebApp.Pages_GameOptions.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>GameOption</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GameOption.GameOptionId" />
            <div class="form-group">
                <label asp-for="GameOption.BoardWidth" class="control-label"></label>
                <input asp-for="GameOption.BoardWidth" class="form-control" />
                <span asp-validation-for="GameOption.BoardWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.BoardHeight" class="control-label"></label>
                <input asp-for="GameOption.BoardHeight" class="form-control" />
                <span asp-validation-for="GameOption.BoardHeight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.BoatLimit" class="control-label"></label>
                <input asp-for="GameOption.BoatLimit" class="form-control" />
                <span asp-validation-for="GameOption.BoatLimit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.CanBoatsTouch" class="control-label"></label>
                <select asp-for="GameOption!.CanBoatsTouch" class="form-control">
                    <option value="0">No</option>
                    <option value="1">Corner</option>
                    <option value="2">Yes</option>
                </select>
                <span asp-validation-for="GameOption.CanBoatsTouch" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.MoveOnHit" class="control-label"></label>
                <select asp-for="GameOption!.MoveOnHit" class="form-control">
                    <option value="0">SamePlayer</option>
                    <option value="1">OtherPlayer</option>
                </select>
                <span asp-validation-for="GameOption.MoveOnHit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameOption.GameSaveDataId" class="control-label"></label>
                <input asp-for="GameOption.GameSaveDataId" class="form-control" />
                <span asp-validation-for="GameOption.GameSaveDataId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
